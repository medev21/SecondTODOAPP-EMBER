<form>
  <div class="form-group">
    <label>Title</label>
    {{input type = "text" class = "form-control" value = model.title placeholder = "Add a task..."}}
  </div>

  <div class="form-group">
    <label>Due Date</label>
    {{input type = "date" class = "form-control" value = model.date }}
  </div>

  <div class="form-group">
    <label>Description</label>
    {{ textarea class = "form-control" value = model.description placeholder = "Describe the task..."}}
  </div>

  <!-- this button will look for this action in the controller -->
  <button {{ action 'editTask' model.id}} class="btn btn-primary">Submit</button>
</form>
